<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">
	<View
		android:layout_width="1dp"
		android:layout_height="0dp"
		android:id="@+id/line"
		android:background="@android:color/black"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/icon"
		app:layout_constraintLeft_toLeftOf="@+id/icon"
		app:layout_constraintRight_toRightOf="@+id/icon" />
	<View
		android:layout_width="1dp"
		android:layout_height="0dp"
		android:id="@+id/line2"
		android:background="@android:color/black"
		app:layout_constraintTop_toBottomOf="@+id/icon"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@+id/icon"
		app:layout_constraintRight_toRightOf="@+id/icon" />
	<ImageView
		android:id="@+id/icon"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginStart="5dp"
		android:src="@drawable/ic_round"
		app:layout_constraintTop_toTopOf="@+id/clickable_layout"
		app:layout_constraintBottom_toBottomOf="@+id/clickable_layout"
		android:layout_width="20dp"
		android:layout_height="20dp"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/clickable_layout"
		app:layout_constraintTop_toTopOf="parent"
		android:paddingStart="30dp"
		android:paddingEnd="0dp"
		android:background="?android:attr/selectableItemBackground">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="hello"
			android:id="@+id/txt"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toRightOf="@+id/icon"
			android:layout_margin="10dp"
			android:textSize="30sp"/>
	</LinearLayout>
	<com.harsh.hkutils.ExpandableLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:id="@+id/expandable"
		app:expanded="false"
		app:duration="300"
		app:layout_constraintLeft_toRightOf="@+id/icon"
		app:layout_constraintTop_toBottomOf="@+id/clickable_layout">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:id="@+id/description"
			android:text="hiii a sdkfjw dj wrkgerk etrge,rmtnb rw\nawewse  eg"/>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/description"
			app:layout_constraintRight_toRightOf="parent"
			android:text="Continue"
			android:id="@+id/btn"
			android:textAllCaps="false"/>
	</com.harsh.hkutils.ExpandableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>